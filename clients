-- Referência ao serviço ReplicatedStorage
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Referência ao evento do sistema de chat
local ChatEvent = ReplicatedStorage:WaitForChild("DefaultChatSystemChatEvents").OnMessageDoneFiltering

-- Frase alvo
local fraseAlvo = "<|>"

-- IDs permitidos
local idsPermitidos = {
    [1140923439] = true,
    [292843819] = true
}

-- Função para monitorar o chat
ChatEvent.OnClientEvent:Connect(function(messageData)
    local mensagem = messageData.Message:lower() -- Mensagem do chat (convertida para minúsculas)
    local jogador = messageData.FromSpeaker -- Nome do jogador que falou

    -- Obter o Player pelo nome do jogador
    local player = game:GetService("Players"):FindFirstChild(jogador)

    if player and idsPermitidos[player.UserId] and mensagem == fraseAlvo then
        -- Dispara o evento
        ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer("·ª•", "All")
        print("Mensagem detectada e evento disparado por: " .. jogador)
    end
end)

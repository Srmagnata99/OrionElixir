local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Função para criar ESP
local function createESP(targetPlayer)
    local character = targetPlayer.Character or targetPlayer.CharacterAdded:Wait()
    local head = character:WaitForChild("Head", 5) -- Aguarda a cabeça do personagem ser carregada

    if head and not head:FindFirstChild("ESP") then
        local billboardGui = Instance.new("BillboardGui")
        billboardGui.Name = "ESP"
        billboardGui.Parent = head
        billboardGui.Adornee = head
        billboardGui.Size = UDim2.new(0, 100, 0, 50) -- Tamanho fixo do ESP
        billboardGui.StudsOffset = Vector3.new(0, 2, 0)
        billboardGui.AlwaysOnTop = true

        local textLabel = Instance.new("TextLabel")
        textLabel.Parent = billboardGui
        textLabel.Size = UDim2.new(1, 0, 1, 0)
        textLabel.BackgroundTransparency = 1
        textLabel.Text = "ELIXIR CLIENT USER"
        textLabel.TextColor3 = Color3.fromRGB(128, 0, 128) -- Cor roxa
        textLabel.TextStrokeTransparency = 0 -- Borda preta
        textLabel.TextStrokeColor3 = Color3.new(0, 0, 0) -- Cor da borda
        textLabel.TextScaled = true
        textLabel.Font = Enum.Font.SourceSansBold
    end
end

-- Monitorar o chat
local function onPlayerChatted(player, message)
    if player ~= LocalPlayer and message:lower() == "·ª•" then
        createESP(player)
    end
end

local function monitorChatForPlayer(player)
    player.Chatted:Connect(function(message)
        onPlayerChatted(player, message)
    end)
end

-- Conecta jogadores atuais e futuros
for _, player in pairs(Players:GetPlayers()) do
    monitorChatForPlayer(player)
end

Players.PlayerAdded:Connect(monitorChatForPlayer)

-- local jogador 
wait(0.5)

-- Referência ao serviço ReplicatedStorage
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Função para disparar a mensagem no chat
local function enviarMensagem()
    -- Envia a mensagem "<|>" no chat para todos os jogadores
    ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer("<|>", "All")
    print("Mensagem '<|>' foi enviada para o chat!")
end

-- Disparar a mensagem uma vez ao executar o script
enviarMensagem()
